<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [%p] %t %c %m%n" />
		</layout>
	</appender>
	<appender name="ROLL" class="org.apache.log4j.DailyRollingFileAppender">
		<!-- The active file to log to -->
		<param name="file" value="../logs/hongming/HmWeb.log" />
		<param name="append" value="true" />
		<param name="encoding" value="UTF-8" />
		<layout class="org.apache.log4j.PatternLayout">
			<!-- The log message pattern -->
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [%p] %t %c %m%n" />
		</layout>
	</appender>

	<appender name="hibernate" class="org.apache.log4j.DailyRollingFileAppender">
		<!-- The active file to log to -->
		<param name="file" value="../logs/hongming/HmWeb_hibernate.log" />
		<param name="append" value="true" />
		<param name="encoding" value="UTF-8" />
		<layout class="org.apache.log4j.PatternLayout">
			<!-- The log message pattern -->
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [%p] %t %c %m%n" />
		</layout>
	</appender>

	<!-- Application Loggers -->
	<logger name="competition.onedata">
		<level value="debug" />
	</logger>
	<logger name="org.hibernate.SQL" additivity="false">
		<level value="debug" />
		<appender-ref ref="hibernate" />
	</logger>

	<!-- Root Logger -->
	<root>
		<priority value="info" />
		<appender-ref ref="console" />
		<appender-ref ref="ROLL" />
	</root>

</log4j:configuration>
