<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:background="@drawable/weather_bgcolor" >

        <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.88"
            android:gravity="center_horizontal"
            android:text="Â°C"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"
            android:textSize="75sp"
            android:textStyle="normal|bold" />

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="0.06"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/humidityIcon"
                android:layout_width="46dp"
                android:layout_height="29dp"
                android:src="@drawable/icon_water_drop" />

            <ImageView
                android:id="@+id/uvIndexIcon"
                android:layout_width="46dp"
                android:layout_height="28dp"
                android:src="@drawable/icon_sun" />

            <ImageView
                android:id="@+id/airQualityIcon"
                android:layout_width="46dp"
                android:layout_height="29dp"
                android:src="@drawable/icon_breath" />

            <ImageView
                android:id="@+id/icon"
                android:layout_width="46dp"
                android:layout_height="27dp"
                android:src="@drawable/icon_car_exhaut" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/humidityMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="78%"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/light_grey"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/uvIndexMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/light_grey"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/airQualityMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30-60"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/light_grey"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/roadSideAirQualityMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/light_grey"
                android:textStyle="normal|bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>